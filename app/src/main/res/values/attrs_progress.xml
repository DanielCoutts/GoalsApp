<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LinearProgressBar">
        <attr name="backgroundLineColor" format="color" />
        <attr name="foregroundLineColor" format="color" />
        <attr name="lineThickness" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SegmentedProgressBar">
        <attr name="backgroundLineColor" />
        <attr name="foregroundLineColor" />
        <attr name="lineThickness" />
        <attr name="numberOfSegments" format="integer" />
        <attr name="spaceBetweenSegments" format="dimension" />
    </declare-styleable>
</resources>